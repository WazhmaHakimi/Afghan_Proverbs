<!DOCTYPE html>
<html>
<head><title>Proverb Form</title></head>
<body>
  <h2><%= proverb ? 'Edit' : 'New' %> Proverb</h2>
  <form method="POST" action="<%= proverb ? '/proverbs/' + proverb.id : '/proverbs' %>">
    <input type="text" name="textDari" placeholder="Dari" value="<%= proverb?.textDari || '' %>" required><br>
    <input type="text" name="textPashto" placeholder="Pashto" value="<%= proverb?.textPashto || '' %>" required><br>
    <input type="text" name="translationEn" placeholder="English" value="<%= proverb?.translationEn || '' %>" required><br>
    <input type="text" name="meaning" placeholder="Meaning" value="<%= proverb?.meaning || '' %>" required><br>
    <input type="text" name="category" placeholder="Category" value="<%= proverb?.category || '' %>" required><br>
    <button type="submit">Submit</button>
  </form>
  <a href="/proverbs">Cancel</a>
</body>
</html>
