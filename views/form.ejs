<!DOCTYPE html>
<html>
  <head>
    <title>Afghan Proverbs</title>
    <%- include('head') %>
  </head>
  <body>
    <div class="container">
      <div class="flex">
        <h2><%= proverb ? 'Edit' : 'New' %> Proverb</h2>
        <form method="GET" action="/proverbs">
          <button class="btn btn-delete">Cancel</button>
        </form>
      </div>
      <form
        class="form"
        method="POST"
        action="<%= proverb ? '/proverbs/' + proverb.id : '/proverbs' %>"
      >
        <div class="group">
          <label>Pashto:</label>
          <input
            type="text"
            name="textPashto"
            placeholder="Pashto"
            value="<%= proverb?.textPashto || '' %>"
          />
        </div>

        <div class="group">
          <label>Dari:</label>
          <input
            type="text"
            name="textDari"
            placeholder="Dari"
            value="<%= proverb?.textDari || '' %>"
          />
        </div>

        <div class="group">
          <label>English:</label>
          <input
            type="text"
            name="translationEn"
            placeholder="English"
            value="<%= proverb?.translationEn || '' %>"
          />
        </div>

        <div class="group">
          <label>English meaining:</label>
          <input
            type="text"
            name="meaning"
            placeholder="Meaning"
            value="<%= proverb?.meaning || '' %>"
          />
        </div>

        <div class="group span2">
          <label>Category:</label>
          <input
            type="text"
            name="category"
            placeholder="Category"
            value="<%= proverb?.category || '' %>"
          />
        </div>

        <button class="span2 btn btn-show" type="submit">
          <a>Submit</a>
        </button>
      </form>
    </div>
  </body>
</html>
